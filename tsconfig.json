{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "noEmitOnError": true,

    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/prisma.config.ts"],
  "exclude": ["dist", "node_modules"]
}
